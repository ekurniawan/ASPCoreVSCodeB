@model ASPCoreGroupB.Models.Mahasiswa

@{
    Layout = "_Layout";
}

<h2>Form Tambah Mahasiswa</h2><br/>
<a asp-action="Index" class="btn btn-success btn-xs">Tampil Data</a>
<div class="row">
@if(ViewData["pesan"]!=null){
    @Html.Raw(ViewData["pesan"])
}
<br/><br/>
</div>

<div class="col-md-6">
    <form asp-action="CreatePost">
        <div asp-validation-summary="ModelOnly" class="text-danger" />
        <div class="form-group">
            <label asp-for="Nim">Nim :</label>
            <input asp-for="Nim" class="form-control" />
            <span asp-validation-for="Nim" class="text-danger" />
        </div>
       <div class="form-group">
            <label asp-for="Nama">Nama :</label>
            <input asp-for="Nama" class="form-control" />
            <span asp-validation-for="Nama" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Email :</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="Telp">Telp :</label>
            <input asp-for="Telp" class="form-control" />
            <span asp-validation-for="Telp" class="text-danger" />
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}